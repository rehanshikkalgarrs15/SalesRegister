<Window x:Class="SalesRegister.Windows.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesRegister.Windows"
        mc:Ignorable="d"
        Title="StartWindow" Height="300" Width="300" WindowState="Maximized">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Vertical">
            <Button Margin="10" BorderBrush="Gray" FontSize="15" Click="add_item_window">Add Item</Button>
            <Button Margin="10"  BorderBrush="Gray" FontSize="15" Click="sales_register_window">Sales Register</Button>
            <Button Margin="10" BorderBrush="Gray"  FontSize="15">Add Item</Button>
        </StackPanel> 

    </StackPanel>
</Window>
